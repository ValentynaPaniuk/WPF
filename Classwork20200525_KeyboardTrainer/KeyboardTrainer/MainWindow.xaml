                <TextBlock x:Name="SpeedChar" FontSize="15" FontWeight="Bold" Text="0"/>
                <TextBlock FontSize="15" Text=" chars/min"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock FontSize="15" Text="Fails: "/>
                <TextBlock Name="Fails"  FontSize="15" FontWeight="Bold" Text="0"/>
            </StackPanel>
