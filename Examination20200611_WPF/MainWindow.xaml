            <StackPanel DockPanel.Dock="Top" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                <Button Style="{StaticResource btnBotton}"/>
                <Button Style="{StaticResource btnBotton}"/>
                <Button Style="{StaticResource btnBotton}"/>
            </StackPanel>

        </Grid>
    </DockPanel>
