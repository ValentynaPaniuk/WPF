            </StackPanel>

            <StackPanel Name="panel" Tag="{Binding Path=PathPage}" DockPanel.Dock="Right" Grid.RowSpan="3" Grid.Column="1"  Orientation="Vertical" ButtonBase.Click="ChoosePage_Click">
                <Button Tag="Pages/Page1.xaml" Style="{StaticResource btnRight0}" Height="60" Content="TOOLS" FontWeight="Bold" Foreground="DarkGray"/>
